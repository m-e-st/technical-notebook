      {%- endfor %}
      </ul>
      -->
      <nav class="bg-white shadow-lg">
		<div class="max-w-6xl px-4">
			<div class="flex justify-between">
				<div class="flex space-x-7 my-2">
					<!-- Website Logo -->
					<div>
						<a href="#" class="items-left py-2 px-2">
							<img src="/img/logo.png" alt="Logo" class="h- w-8 mr-4 float-left" />

						</a>
					</div>
					<!-- Primary Navbar items -->
							<span class="py-2 px-2 text-gray-500 font-semibold hover:text-green-500 transition duration-900"
								><a href="{{ '/' | url }}">{{ metadata.title }}</a></span
							>					<div class="hidden md:flex items-center space-x-1">
					  {%- for entry in collections.all | eleventyNavigation %}
						<span class="navitem{% if entry.url == page.url %} navitem-active{% endif %}">
						<a class="py-2 px-2 text-red-500 font-semibold hover:text-green-500 transition duration-900" href="{{ entry.url | url }}">{{ entry.title }}</a></span>
					  {%- endfor %}
					</div>
				</div>
			</div>
		</div>
	</nav>
	
    </header>

    <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>

